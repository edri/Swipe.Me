extends layout

block content
    // The user must be connected to access the page.
    if username
        section(ng-controller="SwiperController" ng-init='accessToken = "#{accessToken}"; applicationUrl = "#{applicationUrl}"')
            h1.title #{title}
            
            .header(ng-class='{"header-small": numberOfPictures > 0}')
                .connected-content
                    .input-group
                        span.input-group-addon #
                        input.form-control#hashtagInput(name='hashtag' ng-model='hashtag' ng-keyup='validateHashtag($event)' placeholder='Please enter a hashtag (e.g. "#pizza" or just "pizza")...' type='text')
                        .input-group-btn
                            button.btn.btn-swipe-me.btn-show-pics#btnShowPics(data-toggle='tooltip' data-placement='bottom' ng-click='showPics()' ng-disabled='showPicsButtonDisabled' title='Let me show you pictures related to the tags you entered. You can either like or reject them as your convinence!') {{showPicsButtonLabel}}
                    .panel.panel-danger.error-hashtag(ng-if='errorhashtag')
                        .panel-heading.error-content
                            {{errorhashtag}}
                    .result-information(ng-if='numberOfMedia')
                        | There is {{numberOfMedia}} existing media for 
                        strong \#{{hashtagName}}
                        span(ng-if='numberOfPictures >= 0') , including 
                            strong {{numberOfPictures}}
                            |  public ones
                        | .
                    .result-information(ng-if='numberOfMedia == 0')
                        | Sorry there is no result for 
                        strong \#{{hashtagName}}
                        | ...
                        
            img.swiper-logo#logo(src='/img/logo-no-text.png')
                        
            section.pictures#pictures
                .picture-wrapper(id='picture{{$index + firstDisplayedPictureIndex}}' ng-class='{"picture-wrapper-liked": pic.isPictureLiked, "picture-wrapper-rejected": pic.isPictureRejected}' ng-repeat='pic in pictures | limitTo: 3 : firstDisplayedPictureIndex' ng-style='{"z-index": (numberOfPictures - $index)}')
                    img.paperclip(ng-class='{"paperclip-transparent": pic.isMouseOverPicture || pic.isMouseOverNote}' src='/img/paperclip.png')
                    .note(ng-class='{"note-transparent": pic.isMouseOverPicture}' ng-mouseleave='pic.isMouseOverNote = false' ng-mouseover='pic.isMouseOverNote = true')
                        .hashtags-section
                            {{pic.description}}
                        hr.note-separation
                        strong 
                            | Author: 
                            a(href='https://www.instagram.com/{{pic.username}}/' target='_blank') {{pic.username}}
                    img.picture(alt='{{pic.description}}' ng-mouseleave='pic.isMouseOverPicture = false' ng-mouseover='pic.isMouseOverPicture = true' ng-src='{{pic.url}}')
                    .picture-buttons
                        .reject-button(data-toggle='tooltip' data-placement='top' id='reject-button{{$index + firstDisplayedPictureIndex}}' ng-click='changePictureStatus(true)' title="Meh, I dont like it.")
                        span.arrows-info
                            | Press 
                            span.glyphicon.glyphicon-arrow-left
                            |  or 
                            span.glyphicon.glyphicon-arrow-right
                            |  keys to quickly make a choice.
                        .like-button(data-toggle='tooltip' data-placement='top' id='like-button{{$index + firstDisplayedPictureIndex}}' ng-class='{"like-button-active": pic.isPictureLiked || pic.alreadyLiked || currentPictureInLikeRequest}' ng-click='changePictureStatus(false)' title='Amazing, take my like!')
